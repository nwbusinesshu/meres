<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ha a fájl vagy könyvtár létezik → közvetlenül kiszolgáljuk
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Egyébként menjen az index.php-ra
    RewriteRule ^ index.php [L]
</IfModule>
